<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.jellyfin"
       name="Jellyfin"
       version="11.80.4.0"
       provider-name="Team LibreELEC">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>

    <import addon="tools.ffmpeg-tools" version="0.0.0" />
    <import addon="tools.dotnet-runtime" version="0.0.0" />
  </requires>
  <extension point="xbmc.service" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Jellyfin: The Free Software Media System</summary>
    <description>
Jellyfin is a Free Software Media System that puts you in control of managing and streaming your media. Stream to any device from your own server.
    </description>
    <disclaimer>

    </disclaimer>
    <platform>all</platform>
    <news>
initial release
    </news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>

    </assets>
  </extension>
</addon>
